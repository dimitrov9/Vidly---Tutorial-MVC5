@model List<Vidly___Tutorial_MVC5.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Count > 0)
{
    <div class="card">
        <div class="card-header">
            Customer
        </div>
        <ul class="list-group list-group-flush">
            @foreach (var customer in Model)
            {
                @Html.ActionLink(customer.Name, "Details", "Customers", new { id = customer.Id }, new { @class = "list-group-item list-group-item-action" })
            }
        </ul>
    </div>
}
else
{
    <text>We don't have any customers yet.</text>
}

