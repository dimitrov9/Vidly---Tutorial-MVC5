@model List<Vidly___Tutorial_MVC5.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Customer</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@Html.ActionLink(customer.Name, "Details", "Customers", new { id = customer.Id }, new { @class = "list-group-item list-group-item-action" })</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <text>We don't have any customers yet.</text>
}

