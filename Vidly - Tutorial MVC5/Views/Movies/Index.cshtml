@model List<Vidly___Tutorial_MVC5.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Moives</h2>

@if (Model.Any())
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <th>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</th>
                <th>@movie.Genre.Name</th>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <text>We don't have any movies yet.</text>
}

